{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["frontend/components/*"],
      "@backend/*": ["backend/api/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "frontend/**/*",
    "backend/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules"]
}